extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alertError(5000) 
  +alert(2000)

  .bg-gradient-primary-to-secondary.py-4.mb-4.rounded.shadow
    h1.mb-0.text-light.text-center.font-weight-bold(style="text-shadow:2px 2px 8px rgba(0,0,0,0.2);letter-spacing:2px;")
      i.fas.fa-user-plus.mr-2
      | Thêm tài khoản mới

  .card.mb-4.shadow-sm
    .card-body
      form(
        action=`${prefixAdmin}/accounts/create`
        method="POST"
        enctype="multipart/form-data"
      )
        .form-group.mb-3
          label(for="username").d-flex.align-items-center
            i.fas.fa-user-tag.mr-2
            | Tên đăng nhập *
          input.form-control(
            type="text"
            id="username"
            name="username"
            required
          )
        .form-group.mb-3
          label(for="email").d-flex.align-items-center
            i.fas.fa-envelope.mr-2
            | Email *
          input.form-control(
            type="email"
            id="email"
            name="email"
            required
          )
        .form-group.mb-3
          label(for="password").d-flex.align-items-center
            i.fas.fa-lock.mr-2
            | Mật khẩu *
          input.form-control(
            type="password"
            id="password"
            name="password"
            required
          )
        .form-group.mb-3
          label(for="phone").d-flex.align-items-center
            i.fas.fa-phone.mr-2
            | Số điện thoại *
          input.form-control(
            type="text"
            id="phone"
            name="phone"
            required
          )
        .form-group.mb-3(upload-image)
          label(for="avatar").d-flex.align-items-center
            i.fas.fa-image.mr-2
            | Ảnh đại diện
          input.form-control(
            type="file"
            id="avatar"
            name="avatar"
            accept="image/*"
            upload-image-input
          )
          img(
            src=""
            class="image-preview d-none"
            upload-image-preview
            style="max-width:120px;margin-top:10px;"
          )
        .form-group.mb-3
          label(for="role_id") Phân quyền
          select(name="role_id" id="role_id" class="form-control")
            option(disabled selected) -- Chọn --
            if(roles && roles.length > 0)
              each role in roles
                option(value=role.id)= role.title
        .form-group.mb-3
          label(for="status") Trạng thái
          .form-check.form-check-inline
            input(
              type="radio"
              class="form-check-input"
              id="statusActive"
              name="status"
              value="active"
              checked
            )
            label(for="statusActive" class="form-check-label") Hoạt động
          .form-check.form-check-inline
            input(
              type="radio"
              class="form-check-input"
              id="statusInactive"
              name="status"
              value="inactive"
            )
            label(for="statusInactive" class="form-check-label") Không hoạt động
        .form-group.mt-4
          button.btn.btn-primary.btn-lg.w-100(type="submit")
            i.fas.fa-save.mr-2
            | Lưu lại
