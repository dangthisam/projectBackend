extends ../../layouts/auth-layout.pug
include ../../mixins/alert.pug

block main
  +alertError(5000)
  
  // Background với gradient
  .login-wrapper(style="min-height: 100vh; background: linear-gradient(135deg,rgb(102, 234, 111) 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; padding: 20px;")
    .container
      .row.justify-content-center
        .col-lg-5.col-md-7.col-sm-9
          // Card chính với hiệu ứng đẹp
          .card.shadow-lg.border-0(style="border-radius: 20px; backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.95);")
            .card-body.p-5
              // Logo và tiêu đề
              .text-center.mb-4
                .login-icon.mb-3(style="width: 80px; height: 80px; background: linear-gradient(135deg, #667eea, #764ba2); border-radius: 50%; margin: 0 auto; display: flex; align-items: center; justify-content: center; box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);")
                  i.fas.fa-shield-alt(style="font-size: 2rem; color: white;")
                h2.mb-2(style="color: #2c3e50; font-weight: 700; letter-spacing: 1px;") Quản Trị Viên
                p.text-muted.mb-0(style="font-size: 0.9rem;") Đăng nhập để truy cập hệ thống
              
              // Divider
              hr.my-4(style="border-top: 2px solid #e9ecef; opacity: 0.3;")
              
              // Form đăng nhập
              form(
                action=`${prefixAdmin}/auth/login`
                method="POST"
              )
                .form-group.mb-4
                  label.form-label.font-weight-semibold(for="email" style="color: #495057; font-size: 0.9rem; margin-bottom: 8px;") 
                    i.fas.fa-envelope.mr-2(style="color:rgb(172, 234, 102);")
                    | Địa chỉ Email
                  .input-group
                    input.form-control.form-control-lg(
                      type="email"
                      id="email"
                      name="email"
                      placeholder="admin@example.com"
                  
                      style="border: 2px solid #e9ecef; border-radius: 10px; padding: 12px 16px; font-size: 1rem; transition: all 0.3s ease;"
                      onFocus="this.style.borderColor='#667eea'; this.style.boxShadow='0 0 0 0.2rem rgba(102, 126, 234, 0.25)'"
                      onBlur="this.style.borderColor='#e9ecef'; this.style.boxShadow='none'"
                    )

                .form-group.mb-4
                  label.form-label.font-weight-semibold(for="password" style="color: #495057; font-size: 0.9rem; margin-bottom: 8px;")
                    i.fas.fa-lock.mr-2(style="color: #667eea;")
                    | Mật khẩu
                  .input-group
                    input.form-control.form-control-lg(
                      type="password"
                      id="password"
                      name="password"
                      placeholder="Nhập mật khẩu"
                      
                      style="border: 2px solid #e9ecef; border-radius: 10px; padding: 12px 16px; font-size: 1rem; transition: all 0.3s ease;"
                      onFocus="this.style.borderColor='#667eea'; this.style.boxShadow='0 0 0 0.2rem rgba(102, 126, 234, 0.25)'"
                      onBlur="this.style.borderColor='#e9ecef'; this.style.boxShadow='none'"
                    )

                // Remember me checkbox
                .form-group.mb-4
                  .custom-control.custom-checkbox
                    input.custom-control-input(type="checkbox" id="remember")
                    label.custom-control-label(for="remember" style="color: #6c757d; font-size: 0.9rem;") Ghi nhớ đăng nhập

                // Nút đăng nhập
                .form-group.mb-3
                  button.btn.btn-lg.w-100(
                    type="submit"
                    style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 12px; padding: 12px; font-weight: 600; letter-spacing: 0.5px; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);"
                    onMouseOver="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 20px rgba(102, 126, 234, 0.6)'"
                    onMouseOut="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 15px rgba(102, 126, 234, 0.4)'"
                  )
                    i.fas.fa-sign-in-alt.mr-2
                    | Đăng Nhập
              
              // Footer
              .text-center.mt-4
                p.text-muted.mb-0(style="font-size: 0.8rem;")
                  i.fas.fa-shield-alt.mr-1
                  | Hệ thống bảo mật cao
                small.text-muted(style="font-size: 0.75rem;") © 2025 Admin Panel. All rights reserved.

  // Custom CSS inline
  style.
    .login-wrapper {
      position: relative;
      overflow: hidden;
    }
    
    .login-wrapper::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" patternUnits="userSpaceOnUse" width="100" height="100"><circle cx="50" cy="50" r="1" fill="%23ffffff" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
      animation: float 20s ease-in-out infinite;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }
    
    .card {
      position: relative;
      z-index: 1;
    }
    
    .form-control:focus {
      border-color: #667eea !important;
      box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25) !important;
    }
    
    .login-icon {
      animation: pulse 2s ease-in-out infinite;
    }
    
    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.05); }
      100% { transform: scale(1); }
    }

  script(src="/admin/js/script.js")