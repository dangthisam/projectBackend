extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    .container.mt-5
        .row.justify-content-center
            .col-lg-8.col-md-10
                .card.shadow-lg.rounded-4
                    .card-header.bg-gradient-primary-to-secondary.py-4.mb-4.rounded.shadow
                        h1.h1.mb-0.text-primary.text-center.font-weight-bold(style="text-shadow:2px 2px 8px #aaa;letter-spacing:2px;")  
                            i.fas.fa-list-alt.mr-2
                            | #{product.title || "Chi tiết sản phẩm"}
                    .card-body.bg-light
                        .row.g-4.align-items-center
                            .col-md-4.text-center
                                if product.thumbnail
                                    img(
                                        src=product.thumbnail
                                        class="img-thumbnail shadow-sm mb-3"
                                        style="width: 180px; height: 180px; object-fit: cover;"
                                    )
                                else
                                    .bg-secondary.text-white.d-flex.align-items-center.justify-content-center.rounded-circle.mx-auto.mb-3(style="width: 180px; height: 180px; font-size: 2rem;")
                                        i.fas.fa-image
                            .col-md-8
                                ul.list-group.list-group-flush.fs-5
                                    
                                    li.list-group-item
                                        span.fw-semibold Trạng thái: 
                                        if product.status === "active"
                                            span.badge.bg-success.ms-2 Hoạt động
                                        else
                                            span.badge.bg-warning.text-dark.ms-2 Ngừng hoạt động
                                    li.list-group-item
                                        span.fw-semibold Vị trí: 
                                        b.text-primary.ms-2 #{product.position || 0}
                        if product.description
                            .mt-4
                                span.fw-semibold.fs-5 Mô tả:
                                p.mt-2.fs-6.text-secondary !{product.description}
                    .card-footer.bg-white.text-center.d-flex.justify-content-center.gap-3
                        a.btn.btn-warning.px-4.py-2.fw-semibold(
                            href=`${prefixAdmin}/products-category/edit/${product.id}`
                            style="background-color: orange;"
                        ) Chỉnh sửa
                        a.btn.btn-danger.px-4.py-2.fw-semibold(
                            href="/admin/pages/products/#{product.id}/delete"
                            style="background-color: red;"
                        ) Xóa
                        a.btn.btn-primary.px-4.py-2.fw-semibold(
                            href=`${prefixAdmin}/products-category`
                            style="background-color: blue;"
                        ) Quay lại
    style.
        .bg-gradient-primary-to-secondary {
            background: linear-gradient(90deg,rgb(204, 223, 78) 0%,rgb(28, 197, 200) 100%);
        }
    script(src="/admin/js/product.js")