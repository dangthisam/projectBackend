extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
  +alertError(5000)
  .container.my-5
    .row.justify-content-center
      .col-md-7.col-lg-5
        .otp-card
          h1.text-center.mb-4.fw-bold Nhập mã OTP xác thực
          form(action="/user/password/otp", method="POST", autocomplete="off")
            .mb-3
              label.form-label(for="email")
                i.fas.fa-envelope.me-2.text-primary
                | Email
              input#email.form-control.shadow-sm(
                type="email"
                name="email"
                required
                value=email
                readonly
                placeholder="Email"
              )
            .mb-3
              label.form-label(for="otp")
                i.fas.fa-key.me-2.text-success
                | Mã OTP
              input#otp.form-control.shadow-sm(
                type="text"
                name="otp"
                required
                maxlength="12"
                placeholder="Nhập mã OTP"
                autocomplete="one-time-code"
              )
            button.btn.btn-gradient.btn-lg.w-100.mt-2(type="submit")
              i.fas.fa-check-circle.me-2
              | Xác nhận
