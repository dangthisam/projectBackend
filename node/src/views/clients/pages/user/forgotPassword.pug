extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
  +alertError(5000)

  style.
    .forgot-password-card {
      background: rgba(255,255,255,0.85);
      border-radius: 20px;
      box-shadow: 0 8px 32px 0 rgba(31,38,135,0.12);
      padding: 2.5rem 2rem 2rem 2rem;
      margin-top: 40px;
      transition: box-shadow 0.3s;
    }
    .forgot-password-card:hover {
      box-shadow: 0 12px 40px 0 rgba(31,38,135,0.18);
    }
    .btn-gradient {
      background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%);
      color: #fff;
      font-weight: 600;
      border: none;
      border-radius: 25px;
      padding: 0.75rem 2rem;
      box-shadow: 0 4px 16px rgba(78,84,200,0.12);
      transition: background 0.3s, box-shadow 0.3s, transform 0.2s;
    }
    .btn-gradient:hover, .btn-gradient:focus {
      background: linear-gradient(90deg, #8f94fb 0%, #4e54c8 100%);
      color: #fff;
      transform: translateY(-2px) scale(1.03);
      box-shadow: 0 8px 28px rgba(78,84,200,0.18);
      text-decoration: none;
    }

  .container.my-5
    .row.justify-content-center
      .col-md-7.col-lg-5
        .forgot-password-card
          h1.text-center.mb-4.fw-bold Lấy lại mật khẩu
          form(action="/user/password/forgot", method="POST", autocomplete="off")
            .mb-3
              label.form-label(for="email")
                i.fas.fa-envelope.me-2.text-primary
                | Email
              input#email.form-control.shadow-sm(type="email", name="email", required, placeholder="Nhập email của bạn")
            button.btn.btn-gradient.btn-lg.w-100.mt-2(type="submit")
              i.fas.fa-paper-plane.me-2
              | Gửi mail xác nhận
